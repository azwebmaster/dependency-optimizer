{
  "name": "@azwebmaster/dependency-optimizer",
  "version": "0.0.8",
  "description": "Scan for unused dependencies and node_modules waste",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "depoptimize": "dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "packageManager": "bun@1.2.19",
  "scripts": {
    "build": "bun tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "depcheck": "^1.4.7",
    "globby": "^14.0.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@types/node": "latest",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "dependency",
    "unused",
    "node_modules",
    "optimizer",
    "waste",
    "scan",
    "monorepo",
    "npm",
    "yarn"
  ],
  "author": "azwebmaster",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/azwebmaster/dependency-optimizer.git"
  },
  "bugs": {
    "url": "https://github.com/azwebmaster/dependency-optimizer/issues"
  },
  "homepage": "https://github.com/azwebmaster/dependency-optimizer#readme"
}
